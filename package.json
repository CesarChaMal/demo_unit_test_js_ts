    "chai": "^4.2.0",
    "mocha": "^10.0.0",
    "glob": "^8.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.0"
  }
